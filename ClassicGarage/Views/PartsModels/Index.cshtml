@model IEnumerable<ClassicGarage.Models.PartsModel>

@{
    ViewBag.Title = "Index";
}

<h2>Lista czesci</h2>


<table class="table">
    <tr>
        <th>
            Nazwy przydzielonych napraw
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost_Buy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost_Sell)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Buy_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sell_Date)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Repair.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost_Buy)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost_Sell)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Buy_Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sell_Date)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Szczegoly", "Details", new { id=item.ID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
